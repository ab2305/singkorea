<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/btn_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/all_btn_selector"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_electronic"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageButton
        android:id="@+id/btn_electronic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        android:src="@drawable/electronic_btn_selector"
        app:layout_constraintTop_toTopOf="@id/btn_all"
        app:layout_constraintStart_toEndOf="@id/btn_all"
        app:layout_constraintEnd_toStartOf="@id/btn_furniture"
        app:layout_constraintHorizontal_weight="1" />

    <ImageButton
        android:id="@+id/btn_furniture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        android:src="@drawable/furniture_btn_selector"
        app:layout_constraintTop_toTopOf="@id/btn_all"
        app:layout_constraintStart_toEndOf="@id/btn_electronic"
        app:layout_constraintEnd_toStartOf="@id/btn_fashion"
        app:layout_constraintHorizontal_weight="1" />


    <ImageButton
        android:id="@+id/btn_fashion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        android:src="@drawable/fashion_btn_selector"
        app:layout_constraintTop_toTopOf="@id/btn_all"
        app:layout_constraintStart_toEndOf="@id/btn_furniture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <View
        android:id="@+id/divider01"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/btn_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#EFEFEF"/>

    <ImageButton
        android:id="@+id/btn_luxury"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/luxury_btn_selector"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        app:layout_constraintTop_toBottomOf="@id/divider01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_baby"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageButton
        android:id="@+id/btn_baby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        android:src="@drawable/baby_btn_selector"
        app:layout_constraintTop_toTopOf="@+id/btn_luxury"
        app:layout_constraintStart_toEndOf="@id/btn_luxury"
        app:layout_constraintEnd_toStartOf="@id/btn_computer"
        app:layout_constraintHorizontal_weight="1" />

    <ImageButton
        android:id="@+id/btn_computer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        android:src="@drawable/computer_btn_selector"
        app:layout_constraintTop_toTopOf="@+id/btn_luxury"
        app:layout_constraintStart_toEndOf="@id/btn_baby"
        app:layout_constraintEnd_toStartOf="@id/btn_music"
        app:layout_constraintHorizontal_weight="1" />


    <ImageButton
        android:id="@+id/btn_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        android:src="@drawable/music_btn_selector"
        app:layout_constraintTop_toTopOf="@+id/btn_luxury"
        app:layout_constraintStart_toEndOf="@id/btn_computer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <View
        android:id="@+id/divider02"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_luxury"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#EFEFEF"/>


    <ImageButton
        android:id="@+id/btn_life"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/life_btn_selector"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        app:layout_constraintTop_toBottomOf="@id/divider02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_hobby"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageButton
        android:id="@+id/btn_hobby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        android:src="@drawable/hobby_btn_selector"
        app:layout_constraintTop_toTopOf="@+id/btn_life"
        app:layout_constraintStart_toEndOf="@id/btn_life"
        app:layout_constraintEnd_toStartOf="@id/btn_car"
        app:layout_constraintHorizontal_weight="1" />

    <ImageButton
        android:id="@+id/btn_car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/car_btn_selector"
        android:onClick="onClickEventMarket"
        app:layout_constraintTop_toTopOf="@+id/btn_life"
        app:layout_constraintStart_toEndOf="@id/btn_hobby"
        app:layout_constraintEnd_toStartOf="@id/btn_sports"
        app:layout_constraintHorizontal_weight="1" />


    <ImageButton
        android:id="@+id/btn_sports"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickEventMarket"
        android:src="@drawable/sports_btn_selector"
        app:layout_constraintTop_toTopOf="@+id/btn_life"
        app:layout_constraintStart_toEndOf="@id/btn_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

</android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerMarket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6E6" />
</LinearLayout>
